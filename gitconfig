[push]
	default = current
[alias]
	a = add
	ap = add -p
	b = branch -vv
	ba = branch -a -vv
	bm = branch --no-merged
	c = commit -v
	ca = commit -a -v
	ci = commit -v
	co = checkout
	d = diff
	dc = diff --cached
	f = flow
	fff = flow feature finish
	ffs = flow feature start
	l = log --pretty=fuller --stat
	lg = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)%d%Creset %s %Cgreen(%ar, %ad) %C(cyan)<%an>%Creset' --abbrev-commit --date=short
	lp = log -p
	m = merge
	mm = merge --no-ff
	pl = pull --rebase
	ps = push
	r = rebase
	ra = rebase --abort
	rc = rebase --continue
	s = status
	st = stash
[color]
	ui = auto
	diff = auto
	status = auto
	branch = auto
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[color "branch"]
	current = yellow reverse
	local = green
	remote = red
[color "diff"]
	meta = yellow
	frag = cyan
	old = red
	new = green
[fetch]
	prune = true
[core]
	excludesfile = ~/.gitignore
[include]
	path = ~/.gitconfig.local
[merge]
	conflictstyle = diff3
	tool = vimdiff

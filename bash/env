function source_if_exists() {
    [[ -s "$1" ]] && . "$1"
}

# Fix PATH for homebrew's python
export PATH="/usr/local/share/python:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/usr/X11/bin"

# Oracle
# export DYLD_LIBRARY_PATH="/usr/local/oracle/instantclient_10_2"
# export SQLPATH="/usr/local/oracle/instantclient_10_2"
# export TNS_ADMIN="/usr/local/oracle/network/admin"
# export NLS_LANG="AMERICAN_AMERICA.UTF8"
# export PATH=$PATH:$DYLD_LIBRARY_PATH

# MySQL
export PATH=$PATH:/usr/local/mysql/bin

# RVM
source_if_exists "$HOME/.rvm/scripts/rvm"

# Git completion
source_if_exists "/usr/local/etc/bash_completion.d/git-completion.bash"

# Python virtualenvwrapper
export WORKON_HOME="$HOME/.virtualenvs"
source_if_exists "/usr/local/share/python/virtualenvwrapper.sh"
